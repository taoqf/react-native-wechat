{
	"extends": "tslint:recommended",
	"rulesDirectory": [
		"./src/"
	],
	"rules": {
		"indent": [
			true,
			"tabs",
			4
		],
		"quotemark": [
			true,
			"single",
			"avoid-escape",
			"avoid-template"
		],
		"max-line-length": false,
		"trailing-comma": [
			true,
			{
				"multiline": "never",
				"singleline": "never"
			}
		],
		"variable-name": false,
		"interface-name": false,
		"no-bitwise": false,
		"no-empty": false,
		"align": [
			true,
			"parameters",
			"statements"
		],
		"new-parens": true,
		"no-arg": true,
		"no-conditional-assignment": true,
		"no-consecutive-blank-lines": false,
		"no-console": true
	}
}